'end
C -> NB: getGpaList()
activate NB
NB -> GL: remove(idx)
activate GL
return
return
'alt success
	C -> NB: saveGpa()
	activate NB
	return
	C -> UI: showMessage("Deleted GPA entry: ...")
	activate UI
	return

'else invalid index/format
